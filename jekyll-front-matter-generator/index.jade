doctype html
html(lang="de")
    head
        meta(charset='UTF-8')
        title DigitalMind - Jekyll Front Matter Generator
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='author', content='digitalmind.ch')
        link(rel='stylesheet', href='/css/main.css')
        meta(name="description" content="demopage jekyll front matter generator")
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='author', content='digitalmind.ch')
        meta(name="keywords", content="jekyll, generator, demo")
        link(href='http://fonts.googleapis.com/css?family=Source+Code+Pro:500,700', rel='stylesheet', type='text/css')
        link(href='http://fonts.googleapis.com/css?family=Vollkorn:400,400italic', rel='stylesheet', type='text/css')
    // head end
    
    body.generate
        .generator
            h1 jekyll Front Matter Generator
            h3.center read <a href="http://digitalmind.ch/ein-front-matter-generator-fuer-jekyll/">blog post</a>
            form
                h2 file kind
                input#post(type="radio", name="type", value="post", checked)
                label(for="post") Post

                input#page(type="radio", name="type", value="page")
                label(for="page") Page

                br
                .global
                    h2 global variables

                    label(for="title") title
                    input#title(type="text", name="title", maxlength="55")

                    br

                    label(for="subtitle") subtitle
                    input#subtitle(type="text", name="subtitle")
                    p.desc subtitle is not restricted in length
                    
                    br

                    label(for="title-check") title = URL title
                    input#title-yes(type="radio", name="title-check", value="no", checked)
                    label(for="title-yes") yes

                    input#title-no(type="radio", name="title-check", value="yes")
                    label(for="title-no") no
                    .desc title of the post and title to be used in the URL can differ from each other. Check no if you want to set a different link title.
                    .url-title
                        label(for="url") URL title
                        input#url(type="text", name="url", maxlenght="55")

                    br

                    label(for="tags") tags
                    input#tags(type="text", name="tags", placeholder="tag1, tag2, tag3")
                    p.desc tags for the document. Separate with commas
                    br

                    label(for="desc") description
                    textarea#desc(type="text", name="description", maxlenght="115")
                    p.desc meta description used for SEO purposes

                    br
                // global end

                .post
                    h2 post variables
                    label(for="author") author
                    input#author(type="text", name="author", placeholder="author.id")
                    p.desc author id as defined within <code>_data/authors.yml</code>
                    br

                    label(for="header-pic") featured image
                    input#header-pic(type="text", name="header-image", placeholder="imagename.jpg")
                    p.desc featured image. it should be at least 1500px wide, in .jpg (not .jpeg file name) or .png Place the folder within <code>img/featured-imgs</code> and run grunt after. Here only place the image file name with file-type ending.
                    br

                // post end

                .page
                    h2 Page Variables

                    label(for="page-header") header
                    input#header-yes(type="radio", name="page-header", value="yes", checked)
                    label(for="header-yes") yes

                    input#header-no(type="radio", name="page-header", value="no")
                    label(for="header-no") no
                    p.desc decide whether to add a header image or not

                    .page-header-pic
                        label(for="page-header-pic") header image
                        input#page-header-pic(type="text", name="header-image")
                        p.desc header image. it should be at least 1500px wide, in .jpg (not .jpeg file name) or .png Place the folder within <code>img/header-pic</code> and run grunt after. Here only place the image file name with file-type ending.
                    br

                    label(for="menudisplay") display in Menu
                    input#header-yes(type="radio", name="menudisplay", value="yes", checked)
                    label(for="menu-yes") yes

                    input#header-no(type="radio", name="menudisplay", value="no")
                    label(for="menu-no") no
                    p.desc decide if the page should appear in the menu or not.

                    .menudisplay
                        label(for="menudisplay-order") Menu Order Number
                        input#menudisplay-order(type="number", name="menudisplay-order")
                        p.desc order number for the menu (decide at what position the item should appear)

                // page end

                .global
                    h2 content (in markdown)
                    textarea#content(name="content", style="height:300px")

                br
            // form end
            hr
            span.btn.generatefile Generate
            br
            br
            .warn
            .result
                textarea(id="inputTextToSave")
                br
                span.btn.saving(onclick="saveTextAsFile()") Save File
                .msg

        script(src="/js/jquery-2.1.3.js")
        script(src="/js/rangyinputs-jquery.min.js")
        script(src="/js/element_resize_detection.js")
        script(src="/js/js-markdown-extra.js")
        script(src="/js/jquery.meltdown.js")
        script(src="/js/main.js")
    // body end
// html end
